<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:background="@color/verdePrimario">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/botao_login_email"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginBottom="36dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:paddingStart="0dp"
        android:paddingEnd="16dp"
        android:text="ENTRAR"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:theme="@style/Widget.MaterialComponents.Button"
        app:backgroundTint="@color/CorDestak"
        app:icon="@drawable/ic_baseline_input_24"
        app:iconGravity="textStart"
        app:iconPadding="12dp"
        app:iconSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/botao_criar_conta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/botao_google"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:paddingStart="18dp"
        android:text="ENTRAR COM GOOGLE"
        android:textColor="@color/Cor3"
        android:textSize="16sp"
        android:theme="@style/Widget.MaterialComponents.Button"
        app:backgroundTint="#ffffff"
        app:icon="@drawable/googleg_standard_color_18"
        app:iconGravity="start"
        app:iconPadding="0dp"
        app:iconSize="30dp"
        app:iconTint="@android:color/transparent"
        app:iconTintMode="add"
        app:layout_constraintBottom_toTopOf="@+id/login_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/botao_criar_conta"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="210dp"
        android:backgroundTint="#FFFFFF"
        android:text="@string/criar_conta"
        android:textColor="#2E2E2E"
        android:textSize="12sp"
        app:icon="@drawable/ic_baseline_add_24"
        app:iconTint="@color/Cor2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/botao_facebook"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/botao_facebook"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:text="ENTRAR COM facebook"
        android:textColor="@color/Cor3"
        android:textSize="16sp"
        android:theme="@style/Widget.MaterialComponents.Button"
        app:backgroundTint="#ffffff"
        app:icon="@drawable/icfacebook"
        app:iconGravity="start"
        app:iconPadding="0dp"
        app:iconSize="30dp"
        app:iconTint="@android:color/transparent"
        app:iconTintMode="add"
        app:layout_constraintBottom_toTopOf="@+id/botao_login_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/botao_desenvolvedor"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/Cor1"
        android:shadowColor="#00FFFFFF"
        android:text="Desenvolvedor -->"
        android:textColor="#000000"
        app:cornerRadius="10dp"
        app:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeColor="#191919" />

</androidx.constraintlayout.widget.ConstraintLayout>