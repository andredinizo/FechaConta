<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/botao_login_email"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:text="@string/login_email"
        android:textColor="#000000"
        android:textSize="16sp"
        app:backgroundTint="#A8C4D1"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="@+id/botao_facebook"
        app:layout_constraintTop_toBottomOf="@+id/botao_facebook"
        app:strokeColor="#000000"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/botao_google"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="328dp"
        android:text="Login Google"
        android:textColor="#000000"
        android:textSize="16sp"
        app:backgroundTint="#A8C4D1"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#000000"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/botao_desenvolvedor"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#00FFFFFF"
        android:text="Desenvolvedor -->"
        android:textColor="#000000"
        app:cornerRadius="10dp"
        app:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.876"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botao_login_email"
        app:layout_constraintVertical_bias="0.194"
        app:strokeColor="#191919" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/botao_criar_conta"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/criar_conta"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/botao_facebook"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:text="Login Facebook"
        android:textColor="#000000"
        android:textSize="16sp"
        app:backgroundTint="#A8C4D1"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="@+id/botao_google"
        app:layout_constraintTop_toBottomOf="@+id/botao_google"
        app:strokeColor="#000000"
        app:strokeWidth="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>